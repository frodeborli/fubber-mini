{
    "name": "fubber/mini",
    "description": "Minimalist PHP micro-framework for simple web applications with enterprise-grade i18n, caching, and database abstraction",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "micro-framework",
        "i18n",
        "internationalization",
        "translation",
        "cache",
        "database",
        "simple",
        "minimal",
        "routing"
    ],
    "homepage": "https://github.com/frodeborli/fubber-mini",
    "support": {
        "issues": "https://github.com/frodeborli/fubber-mini/issues",
        "source": "https://github.com/frodeborli/fubber-mini"
    },
    "authors": [
        {
            "name": "Frode Borli",
            "email": "frode@borli.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "mini\\": "src/"
        },
        "files": [
            "bootstrap.php",
            "functions.php",
            "src/Cache/functions.php",
            "src/Converter/functions.php",
            "src/Database/functions.php",
            "src/Dispatcher/functions.php",
            "src/Router/functions.php",
            "src/Http/functions.php",
            "src/I18n/functions.php",
            "src/Static/functions.php",
            "src/Template/functions.php",
            "src/Tables/functions.php",
            "src/Logger/functions.php",
            "src/Auth/functions.php",
            "src/Mailer/functions.php",
            "src/CLI/functions.php",
            "src/UUID/functions.php",
            "src/Validator/functions.php",
            "src/Metadata/functions.php",
            "src/Dispatcher/defaults.php"
        ]
    },
    "bin": [
        "bin/mini",
        "bin/mini.bat",
        "bin/mini.cmd",
        "bin/mini.php",
        "bin/mini-translations.php",
        "bin/mini-migrations.php",
        "bin/mini-benchmark.php",
        "bin/mini-docs.php"
    ],
    "require": {
        "php": ">=8.3",
        "symfony/polyfill-intl-icu": "^1.25",
        "symfony/polyfill-intl-messageformatter": "^1.25",
        "psr/simple-cache": "^1.0 || ^2.0 || ^3.0",
        "psr/log": "^3.0",
        "symfony/dotenv": "^7.3",
        "psr/container": "^1.1 || ^2.0",
        "symfony/mailer": "^7.3",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "provide": {
        "psr/simple-cache-implementation": "1.0|2.0|3.0",
        "psr/container-implementation": "1.1|2.0",
        "psr/http-message-implementation": "1.0|2.0",
        "psr/http-factory-implementation": "1.0"
    },
    "suggest": {
        "ext-intl": "For full internationalization features with all languages and locales",
        "symfony/mailer": "For email sending functionality via mailer() helper"
    }
}
